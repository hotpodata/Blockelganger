<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/body_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_weight="0"
        android:background="@color/colorPrimary"
        android:elevation="16dp"
        app:layout_collapseMode="pin"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <TextView
            android:id="@+id/levelTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Level:1"
            android:textColor="@color/ab_textColor"
            android:textSize="42dp" />
    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/board_bg">

        <FrameLayout
            android:id="@+id/countdown_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">

            <TextView
                android:id="@+id/countdown_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="3"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="128dp"
                android:textStyle="bold" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/grid_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.hotpodata.blocklib.view.GridBinderView
                android:id="@+id/gridbinderview_center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/grid_double_height"
                android:layout_gravity="center_vertical"
                android:visibility="invisible" />

            <com.hotpodata.blocklib.view.GridBinderView
                android:id="@+id/gridbinderview_top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/grid_height"
                android:layout_gravity="top"
                android:elevation="8dp" />

            <com.hotpodata.blocklib.view.GridBinderView
                android:id="@+id/gridbinderview_bottom"
                android:layout_width="match_parent"
                android:layout_height="@dimen/grid_height"
                android:layout_gravity="bottom"
                android:elevation="8dp" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/start_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/play_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/grid_double_height"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:src="@drawable/ic_play_circle_outline_24dp"
                android:tint="@color/info_btn_tint" />

            <TextView
                android:id="@+id/info_top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/grid_height"
                android:layout_gravity="top"
                android:background="@color/info_shade"
                android:gravity="center"
                android:paddingLeft="@dimen/keyline_one"
                android:paddingRight="@dimen/keyline_one"
                android:paddingTop="8dp"
                android:text="@string/info_top"
                android:textColor="@color/info_text"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/info_bottom"
                android:layout_width="match_parent"
                android:layout_height="@dimen/grid_height"
                android:layout_gravity="bottom"
                android:background="@color/info_shade"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingLeft="@dimen/keyline_one"
                android:paddingRight="@dimen/keyline_one"
                android:text="@string/info_bottom"
                android:textColor="@color/info_text"
                android:textSize="22dp"
                android:textStyle="bold" />

        </FrameLayout>

    </FrameLayout>
</LinearLayout>